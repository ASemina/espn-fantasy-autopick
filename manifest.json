{
    "name": "ESPN NBA Fantasy Team Auto Setup",
    "description": "Adds a button that automatically adds active players to the current roster in an ESPN NBA fantasy league.",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "declarativeContent",
        "*://games.espn.com/fba/clubhouse/*"
    ],
    "icons": {
        "32": "icon-32.png",
        "64": "icon-64.png",
        "128": "icon-128.png"
    },

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
        "default_title": "ESPN NBA Fantasy Team Auto Setup"
    },
    "content_scripts": [
      {
        "matches": ["*://*.games.espn.com/*"],
        "js": ["autosetup.js"],
        "run_at": "document_end"
      }
    ]
  }